https://leetcode.com/problems/max-chunks-to-make-sorted/
class Solution {
public:
    int maxChunksToSorted(vector<int>& arr) {
        int res = 0, i = 0, maxIdx = -1;
        while (i < arr.size()) {
            maxIdx = max(maxIdx, arr[i]);
            if (i == maxIdx)    res++;
            i++;
        }
        return res;
    }
};
