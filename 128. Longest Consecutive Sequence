https://leetcode.com/problems/longest-consecutive-sequence/

class Solution {
public:
	int longestConsecutive(vector<int>& nums) {
		if (nums.size() == 0){
			return 0;
		}
		if (nums.size() == 1){
			return 1;
		}
		int k = 1;
		int max = 0;
		sort(nums.begin(), nums.end());
		for (int i = 0; i < nums.size() - 1; i++){
			if (abs(nums[i] - nums[i + 1]) == 1){
				k++;
			}
			else{
				if (nums[i] - nums[i + 1] != 0){
					if (k > max){
						max = k;
					}
					k = 1;
				}
			}
		}
		if (k > max){
			max = k;
		}
		return max;
	}
};
