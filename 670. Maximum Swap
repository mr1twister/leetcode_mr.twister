https://leetcode.com/problems/maximum-swap/
class Solution {
public:
    int maximumSwap(int num) {
        int ans = num;
        string s = to_string(num);
        for(int i = 0; i < s.size(); i++) {
            for(int j = i + 1; j < s.size(); j++) {
                int l = s[i];
                int r = s[j];
                if(l < r) {
                    swap(s[i], s[j]);
                    ans = max(ans, stoi(s));
                    swap(s[i], s[j]);
                }
            }
        }
        return ans;
    }
};
