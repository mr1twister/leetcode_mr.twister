https://leetcode.com/problems/cells-with-odd-values-in-a-matrix/

class Solution {
public:
    int oddCells(int n, int m, vector<vector<int>>& indices) {
        vector<vector<int>> res;
        res.resize(n);
        for(int i = 0; i<n; i++){
            res[i].resize(m);
        }
        for(int i = 0; i<indices.size(); i++){
            for(int j=0; j<m; j++){
                res[indices[i][0]][j]++;
            }
            for(int j=0; j<n; j++){
                res[j][indices[i][1]]++;
            }
        }
        int kol = 0;
        for(int i = 0;i<n; i++){
            for(int j = 0; j<m; j++){
                if(res[i][j]%2 != 0){
                    kol++;
                }
            }
        }
        return kol;
    }
};
