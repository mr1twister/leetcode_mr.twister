https://leetcode.com/problems/binary-gap/

class Solution {
public:
	int binaryGap(int N) {
		string s;
		while (N != 0){
			s = to_string(N % 2) + s;
			N /= 2;
		}
		int dist = 0;
		for (int i = 0; i < s.size() - 1; i++){
            for (int j = i + 1; j < s.size(); j++){
                if (s[i] == '1' && s[j] == '1'){
                    dist = max(dist, j - i);
                    break;
                }
            }
        }
		return dist;
	}
};
